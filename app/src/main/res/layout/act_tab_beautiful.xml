<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/action_bar"
        android:background="@color/main_color"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="美容" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/txt_w_w_999_14"
                    android:text="公司名："
                    android:textColor="@color/color_333333" />

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="上海丽质医疗美容门诊部有限公司" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="地 &#160; &#160; 址："
                    android:textColor="@color/color_333333" />

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:lineSpacingExtra="5dp"
                    android:text="上海市浦东新区连波路141号1幢一层、二层，2幢一层、二层" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="公司热线："
                    android:textColor="@color/color_333333" />

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="021-22235555" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="官网地址："
                    android:textColor="@color/color_333333" />

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="http://www.shlzmr.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="法定代表人："
                    android:textColor="@color/color_333333" />

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="卢九宁" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="简介："
                    android:textColor="@color/color_333333" />

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/text_beautiful" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:text="经营范围："
                    android:textColor="@color/color_333333" />

                <TextView
                    style="@style/txt_w_w_999_14"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="5dp"
                    android:text=" \t\t 盈利性医疗机构。【依法须经批准的项目，经相关部门批准后方可开展经营活动】" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>